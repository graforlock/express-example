{{#with user }}
    <section class="profile-page">
        <h1>Profile page</h1>
        <h4>Username: {{ username }}</h4>
        <h4>Ratings: </h4>
        <ul class="profile-page__rating-list">
            {{#each ../ratings}}
                <li>
                    {{#with recipeId}}
                        <ul>
                            <li>
                                <p>{{name}}</p>
                                <p>Rating: {{stars}}</p>
                            </li>
                        </ul>
                    {{/with}}
                </li>
            {{/each}}
        </ul>
    </section>
{{/with}}